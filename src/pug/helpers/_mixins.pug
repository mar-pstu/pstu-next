mixin widget( args )
	.widget
		if ( args.title )
			h3.widget__title
				i.icon.icon-quote
				span= " " + args.title
		else
			h3.widget__title
				i.icon.icon-quote
				span &nbsp; Hello, world!
		if block
			block
		else
			p This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.
