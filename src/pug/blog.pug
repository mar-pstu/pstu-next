extend layout/_index
mixin blog_entry ( args )
	+media( args )
		.text-right: a.btn.btn-primary( href="#" ) Подробней

block variables
	- page.title = "Блог";
	- page.excerpt = "Шаблон блога / категории / архива (index.php / category.php / archive.php)";
	- page.type = "blog category archive";
block main
	.container
		.row
			.col-xs-12.col-sm-7.col-md-7.col-lg-8
				include parts/_info
				+blog_entry ( {} )
				+blog_entry ( {} )
				+blog_entry ( {} )
				+blog_entry ( {} )
				+blog_entry ( {} )
				+blog_entry ( {} )
				include components/_pagination
			.col-xs-12.col-sm-5.col-md-5.col-lg-4: include asides/_right
	include parts/_current