mixin jumbotron_entry( args )
	- args.title = ( args.title ) ? args.title : "Lorem ipsum dolor sit amet, consectetur adipisicing elit";
	- args.excerpt = ( args.excerpt ) ? args.excerpt : "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sed explicabo dolorem minima odit optio voluptates commodi maiores ducimus cupiditate, eaque ipsa, debitis minus earum quia ut! Voluptates velit, ipsa inventore.";
	- args.thumbnail = ( args.thumbnail ) ? args.thumbnail : 'http://placehold.it/1600x1200/2ecc71/ecf0f1';
	.jumbotron__entry.entry: .container: .row: .col-xs-12.col-sm-9.col-md-8.col-lg-8
		img.wp-post-image( src="#", data-lazy=args.thumbnail )
		.overlay
			h3.title #{args.title}
			.excerpt #{args.excerpt}
			p: a.btn.btn-md.btn-success( href="#" ) Подробней
