// START #header
header.wrapper__item.header#header
	.header__fixed.fixed
		include ../nav/_header-fixed
	.header__top.top: .container-fluid: .row: .col-xs-12.col-sm-12.col-md-12.col-lg-12
		include ../nav/_header-top
	.header__bloginfo.bloginfo: .container: .row
		.col-xs-12.col-sm-3.col-md-2.col-lg-2.middle-xs: a.custom-logo-link( href="#" ): img.custom-logo( src=src.img+'pstu.png', title=blog.name )
		.col-xs-12.col-sm-9.col-md.col-lg.middle-xs
			h1.bloginfo-name #{blog.name}
			p.bloginfo-description #{blog.description}
		.col-xs-12.col-sm.col-md-3.col-lg-3.small: +widget( {} )
		.col-xs-12.col-sm.col-md-3.col-lg-3.small: +widget( {} )
	.header__nav.nav: .container: .row
		.col-xs-12.col-sm-5.col-md-5.col-lg-4
			a.button( href="#", role="button" ): i.icon.icon-rss
			form.searchform#header-search( action="#", method="post" )
				input.form-control( type="search", name="s", placeholder="" )
				input.submit( type="submit", value="Поиск" )
		.col-xs-12.col-sm-7.first-sm.col-md-7.col-lg-8
			include ../nav/_header-nav
