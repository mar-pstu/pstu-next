section.section.similar.slider#similar
	.section__heading.heading: h2 Похожие записи
	.section__body.body
		button.slider-arrow.slider-prev#similar-slider-arrow-prev &larr;
		button.slider-arrow.slider-next#similar-slider-arrow-next &rarr;
		#similar-slider
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_01.jpg' } )
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_02.jpg' } )
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_03.jpg' } )
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_04.jpg' } )
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_05.jpg' } )
			+similar_entry( { thumbnail: src.img+'post_thumbnail_sm_06.jpg' } )
