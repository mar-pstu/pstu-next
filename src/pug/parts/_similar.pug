	Секция "Похожие записи"

mixin similar_entry ( args )
	- args.title = ( args.title ) ? args.title : 'Lorem ipsum dolor sit amet, consectetur adipisicing elit.';
	- args.thumbnail = ( args.thumbnail ) ? args.thumbnail : 'http://placehold.it/100x100/2ecc71/ecf0f1';
	- args.excerpt = ( args.excerpt ) ? args.excerpt : 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Earum distinctio facere minima ducimus eos, et laudantium quaerat, iure quis unde eveniet nulla dolore fugit praesentium sapiente officiis cumque sit recusandae.';
	.similar__entry.entry.media.clearfix
		.media-left.pull-left: a(href="#")
			img.media-object( src="#", data-lazy=args.thumbnail, alt=args.title )
			.small.text-center.posted.hide-sm 20.06.2018
		.media-body
			h3.media-heading: a( href="#" ) #{args.title}
			div.excerpt: p #{args.excerpt}
			p.clearfix
				.alignleft.small.hide-xs.visible-sm 20.06.2018
				a.alignright.font-italic( href="#" ) Подробней

