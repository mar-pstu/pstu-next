// PARTNERS start
section.partners#partners: .container: .row: .col-xs-12.col-sm-12.col-md-12.col-lg-12
	#partners-slider
		+partners_entry( {} )
		+partners_entry( {} )
		+partners_entry( {} )
		+partners_entry( {} )
		+partners_entry( {} )
		+partners_entry( {} )
