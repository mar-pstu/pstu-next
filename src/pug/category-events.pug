extend layout/_index
mixin events_entry ( args )
	-
		args.title = ( args.title ) ? args.title : 'Lorem ipsum dolor sit amet, consectetur adipisicing elit';
		args.excerpt = ( args.excerpt ) ? args.excerpt : 	'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Itaque quasi sapiente repellat minima numquam aliquam, in temporibus, tempora ratione! Perspiciatis sunt maiores voluptates, numquam ex necessitatibus consequatur aliquid tempore cumque.';
		args.day = ( args.day ) ? args.day : 'XX';
		args.month = ( args.month ) ? args.month : 'xxxx';
		args.year = ( args.year ) ? args.year : 'xxxx';
	.media.clearfix
		.media-left.pull-left: .date
			.date__day.day #{args.day}
			.date__month.month #{args.month}
			.date__year.year #{args.year}
		.media-body
			h4.media-heading: a( href="#" ) #{args.title}
			div.excerpt: p #{args.excerpt}
		.text-right: a.btn.btn-primary( href="#" ) Подробней #[i.icon.icon-more]
block variables
	- page.title = "Анонсы";
	- page.excerpt = "Шаблон категории Анонсы (category-events.php)";
	- page.type = "category";
block main
	.container
		.row
			.col-xs-12.col-sm-7.col-md-7.col-lg-8
				include parts/_info
				+events_entry ( { day: '15', month: '06', year: '2018' } )
				+events_entry ( { day: '20', month: '07', year: '2018' } )
				+events_entry ( { day: '26', month: '07', year: '2018' } )
				+events_entry ( { day: '30', month: '08', year: '2018' } )
				+events_entry ( { day: '07', month: '08', year: '2018' } )
				+events_entry ( { day: '10', month: '12', year: '2018' } )
				include components/_pagination
			.col-xs-12.col-sm-5.col-md-5.col-lg-4: include asides/_right
	include parts/_current