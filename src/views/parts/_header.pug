// START #header
header.wrapper__item.header#header
	//
	.header__top.top.clearfix: .container
		include ../nav/_languages
		a.search-button#search-button( href="#search-modal", role="button", data-fancybox="" ): .sr-only Поиск
		a.help-button#help-button( href="#help-modal", role="button", data-fancybox="" ): .sr-only Вопросы-ответы
		include ../nav/_header-top
	//
	.container: .row.middle-xs.center-xs
		.col-xs-4.col-sm-4.col-md-2.col-lg-2: a.custom-logo-link( href="#" )
			img.custom-logo( src=src.img+'pstu_new.png', title=blog.name )
		.col-xs-8.col-sm-8.col-md-6.col-lg-4
			h1.bloginfo-name #{blog.name}
			p.bloginfo-description #{blog.description}
		.col-xs-12.col-sm-6.col-md-4.col-lg-3.small.top-xs
			//- адрес
			a.header__address.address#header-address.fancybox-frame( href="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d21728.775613870308!2d37.5634747!3d47.09717!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xa6496d27f2ca6fcb!2z0J_RgNC40LDQt9C-0LLRgdGM0LrQuNC5INC00LXRgNC20LDQstC90LjQuSDRgtC10YXQvdGW0YfQvdC40Lkg0YPQvdGW0LLQtdGA0YHQuNGC0LXRgiDRltC8Lg!5e0!3m2!1sru!2sua!4v1553501440689" ) улица Университетская, 7, г. Мариуполь, 87555, Украина]
			ul.header__social.text-left
				li: a.email( href="#" ) #[span.sr-only email]
				li: a.facebook( href="#" ) #[span.sr-only facebook]
				li: a.instagram( href="#" ) #[span.sr-only instagram]
				li: a.linkedin( href="#" ) #[span.sr-only linkedin]
				li: a.twitter( href="#" ) #[span.sr-only twitter]
				li: a.twitter( href="#" ) #[span.sr-only youtube]
				li: a.rss( href="#" ) #[span.sr-only rss]
		.col-xs-12.col-sm-6.col-md-8.col-lg-3.small.top-xs: include ../parts/_alerts
	.header__nav.nav: .container.clearfix
		include ../nav/_header-nav
		a.burger-button( href="#mobilenav", role="button" )
			svg.burger-button-icon( x="0px", y="0px", width="16px", height="16px", viewBox="0 0 459 459", style="enable-background:new 0 0 459 459;", xml:space="preserve" )
				path( d="M0,382.5h459v-51H0V382.5z M0,255h459v-51H0V255z M0,76.5v51h459v-51H0z", data-original="#000000", data-old_color="#ffffff", fill="#ffffff" )
			span Меню
	// модальные окна
	div( style="display: none;" ): .search-modal#search-modal( style="min-width: 300px;" )
		include ../forms/_search
		include ../asides/_search
	div( style="display: none;" ): .help-modal#help-modal
		p Lorem ipsum dolor sit amet, #[a( href="#" ) consectetur adipisicing] elit. Aliquid id modi amet expedita dignissimos, odio, #[a(href="#") atque veniam deleniti] nisi facilis. Ipsa ratione repellendus, culpa asperiores, nisi pariatur eius deserunt. Odit.
		include ../forms/_faq
	
